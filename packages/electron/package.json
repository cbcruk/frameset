{
  "name": "@frameset/electron",
  "version": "1.0.0",
  "description": "여러 웹사이트를 한 화면에 그리드로 모아보기",
  "main": "dist/main.js",
  "scripts": {
    "start": "pnpm build:all && electron .",
    "build:all": "tsc && pnpm build:renderer && pnpm build:css",
    "build:renderer": "esbuild src/renderer.tsx --bundle --outfile=dist/renderer.js --platform=browser --target=es2022 --jsx=automatic --loader:.tsx=tsx",
    "build:css": "tailwindcss -i src/styles/globals.css -o dist/styles.css",
    "dev": "concurrently \"tsc --watch\" \"tailwindcss -i src/styles/globals.css -o dist/styles.css --watch\"",
    "build": "pnpm build:all && electron-builder",
    "build:mac": "pnpm build:all && electron-builder --mac",
    "build:win": "pnpm build:all && electron-builder --win",
    "typecheck": "tsc --noEmit"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "esbuild": "^0.19.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@ghostery/adblocker-electron": "^2.13.2",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "cross-fetch": "^4.0.0",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwind-merge": "^2.2.0",
    "zustand": "^5.0.9"
  },
  "build": {
    "appId": "com.frameset.app",
    "productName": "Frameset",
    "files": [
      "dist/**/*",
      "index.html"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    }
  }
}
